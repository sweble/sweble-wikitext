body
{
  private WtNodeList fixNewlinesAtBoa(WtNodeList content)
  {
    WtNodeList result = list();

    ArrayList<WtNode> tmp = new ArrayList<WtNode>();

    int count = 0;

    Iterator<WtNode> i = content.iterator();
    outer: while (i.hasNext())
    {
      WtNode n = i.next();
      switch (n.getNodeType())
      {
        case WtNode.NT_NEWLINE:
          ++count;
          // FALL THROUGH
        case WtNode.NT_TEXT:
          if (count >= 2)
            tmp.add(n);
          else
            result.add(n);
          break;

        case WtNode.NT_XML_START_TAG:
          if (count >= 2)
          {
            result.add(n);
            for (WtNode n2 : tmp)
              result.add(n2);
            while (i.hasNext())
              result.add(i.next());
            return result;
          }
          else
            break outer;

        default:
          break outer;
      }
    }

    return content;
  }
}

